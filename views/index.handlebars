{{!-- INDEX --}}

   <center><h1>Burger Palace</h1></center>
<center><div class="row1">
   <div class="col-md-4">
<ul>
    <h2>Ordered</h2>
    <hr>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>
</div> 
</div></center>
<center><div class="row2">
    <div class="col-md-4">
<ul>
    <h2>Devoured Burgers</h2>
    <hr>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div></center>

<div class="row3">
    <div id="burgersubmit"class="col-md-4">
<center><form class="create-form">
<h2 id="burgeradd">Order a Burger</h2>
  <div class="form-group">
    <label for="bp">Burger Name:</label>
    <input type="text" id="bp" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Has a burger been devoured or does it need an order?</label><br>
    <input type="radio" name="devoured" value="1" checked>Devoured<br>
    <input type="radio" name="devoured" value="0" checked> Order
  </div>
    <br>
  <button type="submit">Add Burger</button>
</form></center>
</div>
</div>
